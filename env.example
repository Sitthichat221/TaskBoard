# Environment Variables Template for Cloud Render
# Copy this file to .env and fill in your actual values

# Database Configuration
DATABASE_URL=jdbc:postgresql://your-db-host:5432/your-db-name?sslmode=require
DATABASE_USERNAME=your-db-username
DATABASE_PASSWORD=your-db-password

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_EXPIRATION_TIME=3600000

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://your-frontend-domain.com,https://your-frontend-staging.com

# Server Configuration
PORT=8080
SPRING_PROFILES_ACTIVE=prod

# Hibernate Configuration
HIBERNATE_DDL_AUTO=validate
